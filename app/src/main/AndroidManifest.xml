<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kernel.firstmed">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RecordActivity"></activity>
        <activity android:name=".HistoryActivity" />
        <activity android:name=".ReportActivity" />
        <activity android:name=".BackupRestore" />
        <activity android:name=".MedicineData" />
        <activity
            android:name=".PrescriptionActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".NewBill"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".PatientDetails" />
        <activity
            android:name=".AddPatient"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SearchPatient"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>